        <Label Content="Grille Défense" HorizontalAlignment="Left" Margin="110,-118,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Label Grid.Column="1" Content="Grille Attaque" HorizontalAlignment="Left" Margin="113,-118,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="ColonneAttaque" Width="800*"/>
            <ColumnDefinition x:Name="ColonneDefense" Width="800*"/>
        </Grid.ColumnDefinitions>
    </Grid>
</UserControl>
