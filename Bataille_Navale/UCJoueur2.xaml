<UserControl x:Class="Bataille_Navale.UCJoueur2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bataille_Navale"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1600">
    <Grid x:Name="GrilleJoueur2" Margin="200,237,0,0">
        <Button x:Name="butRotation" Content="Orientation: Verticale" HorizontalAlignment="Left" Margin="10,570,0,0" VerticalAlignment="Top" Height="50" Width="200" FontSize="20" Click="butRotation_Click"/>
        <Label x:Name="labReponse" Content="" HorizontalAlignment="Left" Margin="252,549,0,0" VerticalAlignment="Top" Width="700" Height="83" FontSize="24" HorizontalContentAlignment="Center" Grid.ColumnSpan="2" Foreground="White"/>
